{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "*": ["*", "node_modules/*"]
        }
    },
    "lib": ["es2022"],
    "include": ["api/**/*.ts", "core/**/*.ts", "infrastructure/**/*.ts", "utils/**/*.ts", "config/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
