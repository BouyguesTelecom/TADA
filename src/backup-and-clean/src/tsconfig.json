{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "resolveJsonModule": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": ["./*.ts", "./utils/**/*.ts"],
    "exclude": ["node_modules"]
}
