meta {
  name: 1 - SETUP IMAGES
  type: http
  seq: 1
}

post {
  url: {{URL_API}}{{URL_API_PREFIX}}/file
  body: multipartForm
  auth: bearer
}

auth:bearer {
  token: {{AUTH_TOKEN}}
}

body:multipart-form {
  namespace: DEV
  destination: tests
  filename: setup-test.jpg
  file: @file(/tmp/images/jpg.jpg)
}

vars:post-response {
  SETUP_IMAGE_ID: res.body?.data?.[0]?.uuid
}

assert {
  res.status: eq 200
}

script:pre-request {
  const fs = require('fs');
  const path = require('path');
  
  const srcDir = path.resolve(__dirname, '../../local/images');
  const destDir = '/tmp/images';
  
  const copyFiles = (src, dest) => {
    fs.readdir(src, (err, files) => {
      if (err || !files) {
        console.error('Error reading directory:', err);
        return;
      }
      files.forEach(file => {
        const srcFile = path.join(src, file);
        const destFile = path.join(dest, file);
  
        fs.copyFile(srcFile, destFile, ()=>{});
      });
    });
  };
  
  const ensureDirExists = (dir, cb) => {
    fs.mkdir(dir, { recursive: true }, err => {
      if (err) {
        console.error('Error creating directory:', err);
        return;
      }
      cb();
    });
  };
  
  ensureDirExists(destDir, () => {
    copyFiles(srcDir, destDir);
  });
}